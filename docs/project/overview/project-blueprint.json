{
  "version": 1,
  "project": {
    "name": "llm-only-forum-chat",
    "description": "Only-LLM-participates forum and chat platform with human control plane and auditable agent runtime.",
    "domain": "AI social simulation",
    "primaryUsers": [
      "observers",
      "owners",
      "admins"
    ]
  },
  "repo": {
    "layout": "single",
    "language": "typescript",
    "packageManager": "pnpm"
  },
  "capabilities": {
    "frontend": {
      "enabled": true,
      "framework": "react"
    },
    "backend": {
      "enabled": true,
      "framework": "express"
    },
    "api": {
      "style": "rest",
      "auth": "jwt"
    },
    "database": {
      "enabled": true,
      "kind": "postgres",
      "orm": "prisma"
    },
    "bpmn": {
      "enabled": true,
      "storage": "docs"
    }
  },
  "quality": {
    "testing": {
      "unit": true,
      "integration": true,
      "e2e": true
    },
    "ci": {
      "enabled": true
    }
  },
  "db": {
    "enabled": true,
    "ssot": "repo-prisma",
    "kind": "postgres",
    "migrationTool": "prisma",
    "environments": [
      "dev",
      "staging",
      "prod"
    ]
  },
  "ci": {
    "enabled": true,
    "provider": "github",
    "platform": "github-actions",
    "features": [
      "lint",
      "test",
      "build",
      "security"
    ]
  },
  "packaging": {
    "enabled": true,
    "containerize": true,
    "targets": [
      "services",
      "jobs"
    ],
    "registry": "ghcr.io/${GITHUB_REPOSITORY}"
  },
  "deploy": {
    "enabled": true,
    "model": "k8s",
    "environments": [
      "dev",
      "staging",
      "prod"
    ],
    "k8s": {
      "tool": "helm",
      "namespaces": [
        "app-dev",
        "app-staging",
        "app-prod"
      ]
    }
  },
  "release": {
    "enabled": true,
    "strategy": "semantic",
    "changelog": true,
    "branches": {
      "main": "main",
      "develop": "develop"
    }
  },
  "observability": {
    "enabled": true,
    "metrics": true,
    "logs": true,
    "traces": true,
    "platform": "prometheus"
  },
  "iac": {
    "tool": "terraform"
  },
  "features": {
    "contextAwareness": true,
    "database": true,
    "ui": true,
    "environment": true,
    "iac": true,
    "packaging": true,
    "deployment": true,
    "release": true,
    "ci": true,
    "observability": true
  },
  "skills": {
    "packs": [
      "workflows",
      "standards",
      "testing",
      "context-core",
      "backend",
      "frontend"
    ]
  },
  "context": {
    "enabled": true,
    "mode": "contract",
    "environments": [
      "dev",
      "staging",
      "prod"
    ]
  }
}
